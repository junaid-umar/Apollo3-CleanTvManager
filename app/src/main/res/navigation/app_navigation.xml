<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_navigation"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.combyne.tvmanager.presentation.ui.home.HomeFragment"
        android:label="fragment_home">
        <action
            android:id="@+id/action_home_to_createMovie"
            app:destination="@id/createMovie" />
        <action
            android:id="@+id/action_home_to_movies"
            app:destination="@id/movies" />
    </fragment>

    <fragment
        android:id="@+id/createMovie"
        android:name="com.combyne.tvmanager.presentation.ui.movie.create_movie.CreateMovieFragment"
        android:label="fragment_create_movie" />

    <fragment
        android:id="@+id/movies"
        android:name="com.combyne.tvmanager.presentation.ui.movie.movies.MoviesFragment"
        android:label="fragment_movies" />
</navigation>